{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["types/*"],
      "@/core/*": ["core/*"],
      "@/parsers/*": ["parsers/*"],
      "@/extractors/*": ["extractors/*"],
      "@/transformer/*": ["transformer/*"],
      "@/utils/*": ["utils/*"],
      "@/errors/*": ["errors/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ],
  "references": []
}
