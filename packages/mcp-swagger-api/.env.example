# 服务器配置
NODE_ENV=development
PORT=3001
MCP_PORT=3322

# CORS配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 安全配置
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=pretty

# 性能配置
REQUEST_TIMEOUT=30000
CACHE_TTL=300
MAX_PAYLOAD_SIZE=10mb

# API限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# MCP Server配置
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3322
MCP_SERVER_HEALTH_CHECK_INTERVAL=30000

# OpenAPI配置
DEFAULT_OPENAPI_BASE_URL=https://api.example.com
MAX_OPENAPI_FILE_SIZE=5mb
OPENAPI_CACHE_TTL=600

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# 开发配置
HOT_RELOAD=true
WATCH_FILES=true
DEBUG_MODE=true
