{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "mcp-swagger-parser": ["../mcp-swagger-parser/dist"],
            "mcp-swagger-parser/*": ["../mcp-swagger-parser/dist/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}